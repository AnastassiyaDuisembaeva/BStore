<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:padding="8dp"
    tools:context=".DetailsBook">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="0dp"
        android:layout_marginBottom="0dp"
        android:id="@+id/cv_d"
        >
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="8dp"
            >
            <ImageView
                android:layout_width="170dp"
                android:layout_height="250dp"
                android:id="@+id/imageBook_d"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:layout_margin="8dp"
                tools:srcCompat="@drawable/i_grynul_grom"
                android:scaleType="centerInside"
                />

            <TextView
                android:id="@+id/name_d"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_marginTop="16dp"
                android:layout_toRightOf="@+id/imageBook_d"
                android:textSize="25sp"
                tools:text="И грянул гром" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/author_d"
                tools:text="Рэй Бредбери"
                android:textSize="20sp"
                android:layout_marginTop="8dp"
                android:layout_toRightOf="@+id/imageBook_d"
                android:layout_below="@+id/name_d"
                />
            <TextView
                android:id="@+id/bookGanre_d"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="фантастика"
                android:layout_marginTop="8dp"
                android:layout_toRightOf="@+id/imageBook_d"
                android:layout_below="@+id/author_d"
                />
            <TextView
                android:id="@+id/price_d"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="1500"
                android:layout_marginTop="8dp"
                android:layout_toRightOf="@+id/imageBook_d"
                android:layout_below="@+id/bookGanre_d"
                />

            <Button
                android:id="@+id/button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/imageBook_d"
                android:layout_below="@+id/price_d"
                android:layout_marginTop="24dp"
                android:layout_marginLeft="24dp"
                android:background="@color/colorAccent"
                android:textColor="#FFFFFF"
                android:text="Button" />
        </RelativeLayout>
    </android.support.v7.widget.CardView>
</LinearLayout>